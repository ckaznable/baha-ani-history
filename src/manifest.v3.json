{
  "background": {
    "service_worker": "script/background.js"
  },
  "content_security_policy": {
    "script-src": "self",
    "object-src": "self"
  },
  "permissions": [
    "storage",
    "contextMenus"
  ],
  "host_permissions": [
    "https://ani.gamer.com.tw/*"
  ],
  "manifest_version": 3,
    "web_accessible_resources": [
    {
      "resources": [
        "script/injection.js"
      ],
      "matches": ["https://ani.gamer.com.tw/*"]
    }
  ]
}